{
  "compilerOptions": {
    "outDir": "./lib/",
    "sourceMap": true,
    "noImplicitAny": true,
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "./dist/*",
    "./lib/*",
    "./node_modules/**/*",
    "./webpack.config.babel.js"
  ]
}
